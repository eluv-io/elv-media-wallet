{
  "hosting": {
    "public": "test/dist/test-wallet-ops",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "index.html"
    ],
    "rewrites": [
      { "source": "/ping", "function": "ping" },
      { "source": "/index.html", "function": "create_index_html" },
      { "source": "/", "function": "create_index_html" },
      { "source": "index.html", "function": "create_index_html" },
      { "source": "**", "function": "create_index_html" }
    ]
  },
  "functions": {
    "ignore": [
      "node_modules",
      ".git",
      "firebase-debug.log",
      "firebase-debug.*.log"
    ]
  },
  "emulators": {
    "hosting": {
      "host": "localhost",
      "port": 5050
    }
  }
}
